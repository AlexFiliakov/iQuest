#!/usr/bin/env python3
"""Quick test to verify new tabs can be imported and instantiated."""

import sys
import os

# Add the src directory to the path
sys.path.insert(0, os.path.join(os.path.dirname(__file__), 'src'))

try:
    # Test Daily Dashboard import
    from ui.daily_dashboard_widget import DailyDashboardWidget
    print("✓ Daily Dashboard Widget imported successfully")
    
    # Test Weekly Dashboard import  
    from ui.weekly_dashboard_widget import WeeklyDashboardWidget
    print("✓ Weekly Dashboard Widget imported successfully")
    
    # Test if they can be instantiated (without Qt app)
    print("\nChecking class structures...")
    
    # Check Daily Dashboard
    print(f"  Daily Dashboard signals: {[s for s in dir(DailyDashboardWidget) if 'Signal' in str(type(getattr(DailyDashboardWidget, s)))]}")
    print(f"  Daily Dashboard methods: {len([m for m in dir(DailyDashboardWidget) if not m.startswith('_') and callable(getattr(DailyDashboardWidget, m))])}")
    
    # Check Weekly Dashboard
    print(f"  Weekly Dashboard signals: {[s for s in dir(WeeklyDashboardWidget) if 'Signal' in str(type(getattr(WeeklyDashboardWidget, s)))]}")
    print(f"  Weekly Dashboard methods: {len([m for m in dir(WeeklyDashboardWidget) if not m.startswith('_') and callable(getattr(WeeklyDashboardWidget, m))])}")
    
    print("\n✅ All imports successful! The new tabs should work correctly.")
    
except ImportError as e:
    print(f"\n❌ Import error: {e}")
    sys.exit(1)
except Exception as e:
    print(f"\n❌ Unexpected error: {e}")
    sys.exit(1)